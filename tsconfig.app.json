{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,  // Allow importing TypeScript file extensions
    "isolatedModules": true,
    "moduleDetection": "force",
    "composite": true,  // Enable composite projects
    "declaration": true, // Ensure type declaration files are emitted
    "emitDeclarationOnly": true, // Emit only declaration files
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* for ShadCN */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",      // Include all files in the 'src' directory and subdirectories
    "supabase/**/*"  // Include all files in the 'supabase' directory and subdirectories
  ]
}
